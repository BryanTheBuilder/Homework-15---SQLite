<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/creator_thumbnail"
    android:layout_width="350dp"
    android:layout_height="240dp"
    android:contentDescription="comic_pic"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/creator_name"
    android:textStyle="bold"
    android:layout_width="349dp"
    android:layout_height="50dp"
    android:padding="10dp"
    android:background="#66000000"
    android:text="@string/app_name"
    android:textAlignment="center"
    android:textColor="#ffffffff"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="@id/creator_thumbnail"
    app:layout_constraintStart_toStartOf="@id/creator_thumbnail"
    app:layout_constraintBottom_toBottomOf="@id/creator_thumbnail"/>

</android.support.constraint.ConstraintLayout>